<html>

<head>
    <style>
        h1 {
            text-align: center;
            font-size: 36px;
        }

        h2 {
            text-align: center;
            font-size: 48px;
        }

        button {
            text-align: center;
            font-size: 24px;
        }

        .container {
            width: 100%;
            height: 100%;
            position: relative;
        }

        .centered-element {
            width: 50%;
            height: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="centered-element">
            <h1>
                Verification Result
            </h1>
            <h2>
                {{ .result }}
            </h2>
            <div>
                <h2>
                    <button onclick="window.close()">Close</button>
                </h2>
            </div>
        </div>
    </div>
</body>

</html>
